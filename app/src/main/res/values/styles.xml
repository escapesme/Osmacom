<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


    </style>
    <style name="recycler">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:scrollbars">vertical</item>




    </style>
    <style name="recycler_parent">
        <item name="android:layout_width">wrap_content</item>

        <item name="android:layout_height">30dp</item>
    </style>

    <style name="recycler_parent_s">
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_marginTop">1dp</item>


    </style>

    <style name="background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

        <item name="android:scaleType">center</item>

    </style>

    <style name="data_preant">
        <item name="android:layout_width">390dp</item>
        <item name="android:layout_height">500dp</item>



    </style>



    <style name="image_data">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingEnd">50dp</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:paddingStart">50dp</item>
        <item name="android:paddingTop">50dp</item>

        <item name="android:paddingBottom">50dp</item>



    </style>

    <style name="back_btn_style">

        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">7dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/squircle_bt</item>
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:tint">#fff</item>


    </style>

    <style name="icon_style">

        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">#00000000</item>
        <item name="android:tint">@color/colorPrimaryDark</item>


    </style>




    <style name="btns_panel">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:elevation">4dp</item>

        <item name="android:gravity">center</item>

        <item name="android:background">#70ffffff</item>

        <item name="android:orientation">horizontal</item>



    </style>

    <style name="txt_style"></style>

    <style name="nav_style">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>

        <item name="android:alpha">0.9</item>
        <item name="android:background">?android:attr/windowBackground</item>





    </style>

    <style name="label_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textSize">20sp</item>







    </style>


</resources>
