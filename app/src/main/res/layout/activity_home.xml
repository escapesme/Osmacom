<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bright_background_with_dots"
    tools:context=".HomeActivity">


    <ImageView
        android:id="@+id/background"
        style="@style/background"
        android:background="@drawable/bright_background_with_dots"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorPrimaryDark"
        android:padding="30dp"
        android:onClick="gotomain"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/arimo"
        android:onClick="gotomain"
        android:text="Touch screen to move on .."
        android:textColor="@color/colorPrimary"
        android:textSize="22sp"

        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.5" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="vertical"
        android:onClick="gotomain"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="185dp"
                android:layout_height="140dp"
                android:layout_margin="2dp"
                android:layout_weight="0"
                android:onClick="gotomain"

                app:srcCompat="@drawable/h_image_1" />

            <ImageView
                android:layout_width="185dp"
                android:layout_height="140dp"
                android:layout_margin="2dp"
                android:layout_weight="0"
                android:onClick="gotomain"

                app:srcCompat="@drawable/h_image_2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="gotomain"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="185dp"
                android:layout_height="140dp"
                android:layout_margin="2dp"
                android:layout_weight="0"
                android:onClick="gotomain"

                app:srcCompat="@drawable/h_image_3" />

            <ImageView
                android:layout_width="185dp"
                android:layout_height="140dp"
                android:layout_margin="2dp"
                android:layout_weight="0"
                android:onClick="gotomain"

                app:srcCompat="@drawable/h_image_4" />
        </LinearLayout>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
